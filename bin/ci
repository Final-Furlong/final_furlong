#!/usr/bin/env bash

set -e

YELLOW='\033[1;33m'
NOCOLOR='\033[0m'

echo -e "${YELLOW}[ bin/ci ] Running unit tests${NOCOLOR}"
CI=true bin/rspec

echo -e "${YELLOW}[ bin/ci ] Running integration tests${NOCOLOR}"
bin/rails cypress:run

echo -e "${YELLOW}[ bin/ci ] Running security scripts${NOCOLOR}"
sh .github/scripts/security.sh

echo -e "${YELLOW}[ bin/ci ] Done"
