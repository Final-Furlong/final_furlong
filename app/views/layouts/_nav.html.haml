          %i.fas.fa-users.fa-fw.me-3
          %span Users
        %a.list-group-item.list-group-item-action.py-2.ripple{ href: '#', aria: { current: true } }
          %i.fas.fa-money-bill.fa-fw.me-3
          %span Sales
  -# Navbar
  %nav.navbar.navbar-expand-lg.navbar-light.bg-white.fixed-top#main-navbar
    -# Container
    .container-fluid
      -# Toggle button
      %button.navbar-toggler{ type: "button", data: { 'mdb-toggle' => 'collapse', 'mdb-target' => '#sidebarMenu' }, aria: { controls: 'sidabarMenu', expanded: false, label: 'Toggle navigation' } }
        %i.fas.fas-bars
      -# Brand
      %a.navbar-brand{ href: '#' }
        %img{ src: "https://mdbootstrap.com/img/logo/mdb-transaprent-noshadows.png", height: "25", alt: "foo", loading: "lazy" }
      -# Search form
      %form.d-none.d-md-flex.input-group.w-auto.my-auto
        %input.form-control.rounded{ autocomplete: 'off', type: 'search', placeholder: 'Search (ctrl + "/" to focus)', style: 'min-width: 225px;' }
        %span.input-group-text.border-0
          %i.fas.fa-search
      -# Right links
      %ul.navbar-nav.ms-auto.d-flex.flex-row
        -# Notification dropdown
        %li.nav-item.dropdown
          %a.nav-link.me-3.me-lg-0.dropdown-toggle.hidden-arrow#navbar-dropdown-menu-link{ href: '#', role: 'button', data: { 'mdb-toggle' => 'dropdown' }, aria: { expanded: false } }
            %i.fas.fa-bell
            %span.badge.rounded-pill.badge-notification.bg-danger= 1
        %ul.dropdown-menu.dropdown-menu-end{ area: { labelledby: 'navbarDropdownMenuLink' } }
          %li
            %a.dropdown-item{ href: '#' }= "Some news"
          %li
            %a.dropdown-item{ href: '#' }= "Another news"
          %li
            %a.dropdown-item{ href: '#' }= "Something else here"
        %li.nav-item
          %a.nav-link.me-3.me-lg-0{ href: '#' }
            %i.fas.fa-fill-drop
        %li.nav-item.me-3.me-lg-0
          %a.nav-link{ href: '#' }
            %i.fas.fa-github
        %li.nav-item.dropdown
          %a.nav-link.me-3.me-lg-0.dropdown-toggle.hidden-arrow#navbar-dropdown{ href: '#', role: 'button', data: { 'mdb-toggle' => 'dropdown' }, aria: { expanded: false } }
            %i.united.kingdom.flag.m-0
          %ul.dropdown-menu.dropdown-menu-end{ aria: { labelledby: 'navbarDropdown' } }
            %li
              %a.dropdown-item{ href: '#' }
                %i.united.kingdom.flag
                %span
                  %span English
                  %i.fa.fa-check.text-success.ms-2
            %li
              %hr.dropdown-divider
            %li
              %a.dropdown-item{ href: "#" }
                %i.poland.flag
                %span Polski
        -# Avatar
        %li.nav-item.dropdown
          %a.nav-link.dropdown-toggle.hidden-arrow.d-flex.align-items-center{ href:"#", role: "button", data: { 'mdb-toggle': "dropdown"}, aria: { expanded: "false" } }
