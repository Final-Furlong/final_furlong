        %a.list-group-item.list-group-item-action.py-2.ripple{ href: '#', aria: { current: true } }
          %i.fas.fa-chart-line.fa-fw.me-3
          %span Analytics
        %a.list-group-item.list-group-item-action.py-2.ripple{ href: '#', aria: { current: true } }
          %i.fas.fa-chart-pie.fa-fw.me-3
          %span SEO
        %a.list-group-item.list-group-item-action.py-2.ripple{ href: '#', aria: { current: true } }
          %i.fas.fa-chart-bar.fa-fw.me-3
          %span Orders
        %a.list-group-item.list-group-item-action.py-2.ripple{ href: '#', aria: { current: true } }
