.dropdown.d-none.d-sm-block
  %button.btn.btn-light.ms-2.px-2.py-1{ type: "button", data: { "bs-toggle" => "dropdown" },
          aria: { expanded: false } }
    %span.fi{ class: american_locale? ? "fi-us" : "fi-gb" }
  %ul.dropdown-menu.dropdown-menu-end
    %li
      = button_to settings_path, method: :patch, class: "dropdown-item" do
        = hidden_field_tag "locale", "en"
        %span.me-2{ class: "fi fi-us" }
        English
        - if american_locale?
          %i.fas.fa-check.ms-2
    %li
      = button_to settings_path, method: :patch, class: "dropdown-item" do
        = hidden_field_tag "locale", "en-GB"
        %span.me-2{ class: "fi fi-gb" }
        English
        - if british_locale?
          %i.fas.fa-check.ms-2
