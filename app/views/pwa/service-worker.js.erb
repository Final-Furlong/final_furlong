const VERSION = Date.now();

self.addEventListener('message', (event) => {
  if (event.data.type === 'SKIP_WAITING') {
    self.skipWaiting();
  }
});

self.addEventListener('install', function(event) {
  console.log('[Serviceworker]', 'Installing!', event);
});

self.addEventListener('activate', function(event) {
  self.clients.claim(); // take control of all pages under this service worker's scope

  event.waitUntil(
    caches.keys().then(function(cacheNames) {
      return Promise.all(
        cacheNames.map(function(cacheName) {
          if (cacheName !== VERSION) {
            return caches.delete(cacheName);
          }
        })
      );
    })
  );

  event.waitUntil(new Promise((resolve) => setTimeout(resolve, 3000)));
});

const onPush = (event) => {
  const { title, ...options } = event.data.json();

  const showNotification = self.registration.showNotification(title, options);

  event.waitUntil(showNotification);
};
self.addEventListener('push', onPush);

self.addEventListener("pushsubscriptionchange", event => {
  const newSubscription = event.newSubscription?.toJSON()

  event.waitUntil(
    fetch(<%= change_notifications_path.inspect.html_safe %>, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({
        old_endpoint: event.oldSubscription?.endpoint,
        new_endpoint: event.newSubscription?.endpoint,
        new_p256dh: newSubscription?.keys?.p256dh,
        new_auth: newSubscription?.keys?.auth
      })
    })
  )
})
