#!/bin/sh
set -e
if [ "${1}" = -h ] || [ "${1}" = --help ] || [ "${1}" = help ]; then
  echo "Usage: ${0}"
  echo
  echo "Rolls back the current migration from dev and test databases"
  exit
else
  if [ ! -z "${1}" ]; then
    echo "Unknown argument:'${1}'"
    exit 1
  fi
fi

echo "[ bin/db-rollback ] rolling back primary development schema"
bin/rails db:rollback:primary

echo "[ bin/db-rollback ] rolling back primary test schema"
bin/rails db:rollback:primary RAILS_ENV=test
