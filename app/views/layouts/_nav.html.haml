%header
  = render "layouts/sidenav"
  -# Navbar
  %nav.navbar.navbar-expand-lg.navbar-dark.bg-primary.fixed-top#main-navbar
    -# Container
    .container-fluid
      -# Toggle button
      %button.navbar-toggler{ type: "button", data: { bs_toggle: "collapse", bs_target: "#sidebar-menu" },
                              aria: { controls: "sidabar-menu", expanded: false, label: "Toggle navigation" } }
        %i.fa-solid.fa-bars#icon-show-sidenav
        %i.fa-solid.fa-xmark.d-none#icon-hide-sidenav
      -# Brand
      = link_to t(".game_title"), root_path, class: "navbar-brand", data: { turbo: false }

      -# Right links
      .navbar-nav.d-flex.flex-row
        %form.d-none.d-lg-block.d-flex{ role: "search" }
          %input.form-control.me-2{ type: "search", disabled: true, placeholder: t(".search_placeholder"),
                                    aria: { label: t(".search_aria_label") } }

        = render Nav::I18n::Component.new(locale: I18n.locale, version: :tablet, variants: request.variant)

        -# Avatar
        - if user_signed_in?
          = render "layouts/user_nav"
        - else
          = render Nav::Guest::Component.new
