{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "required": [
    "days"
  ],
  "properties": {
    "days": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "day",
          "activities"
        ],
        "properties": {
          "day": {
            "type": "string",
            "enum": [
              "Sunday",
              "Monday",
              "Tuesday",
              "Wednesday",
              "Thursday",
              "Friday",
              "Saturday"
            ]
          },
          "activities": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "activity",
                "distance"
              ],
              "properties": {
                "activity": {
                  "type": "string",
                  "enum": [
                    "walk",
                    "trot",
                    "canter",
                    "gallop",
                    "breeze"
                  ]
                },
                "distance": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 40
                }
              }
            },
            "minItems": 1,
            "maxItems": 3,
            "uniqueItems": true
          }
        }
      },
      "minItems": 1,
      "uniqueItems": true
    }
  }
}
